<core:FragmentDefinition
xmlns:core="sap.ui.core"
xmlns="sap.m"
xmlns:mvc="sap.ui.core.mvc"
xmlns:f="sap.f"
xmlns:card="sap.f.cards"
xmlns:w="sap.ui.integration.widgets"
xmlns:chart="sap.suite.ui.microchart"
xmlns:layout="sap.ui.layout"
displayBlock="true"
height="100%">
    <ScrollContainer
		height="100%"
		width="100%"
		vertical="true">
		<ToggleButton
			id="revealGrid"
			text="Reveal Grid"
			press="onRevealGrid"
			class="sapUiSmallMarginBegin sapUiSmallMarginTop sapUiTinyMarginBottom" />

		<f:GridContainer
			id="grid1"
			class="sapUiSmallMargin"
			snapToRow="true">
			<f:layout>
				<f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
			</f:layout>
			<f:layoutXS>
				<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
			</f:layoutXS>
			<w:Card manifest="{manifests>/analytical}">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="5" columns="13" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="{manifests>/donut}">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="5" columns="6" />
				</w:layoutData>
			</w:Card>
			<w:Card manifest="{manifests>/stackedColumn}">
				<w:layoutData>
					<f:GridContainerItemLayoutData rows="5" columns="9" />
				</w:layoutData>
			</w:Card>
		</f:GridContainer>
	</ScrollContainer>
</core:FragmentDefinition>